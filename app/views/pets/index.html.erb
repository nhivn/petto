<p id="notice"><%= notice %></p>

<h1>Pets</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Type</th>
      <th>Birthday</th>
      <th>Breed</th>
      <th>Description</th>
      <th>Microchip number</th>
      <th>Adoption date</th>
      <th>Color</th>
      <th>Owner</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @pets.each do |pet| %>
      <tr>
        <td><%= pet.name %></td>
        <td><%= pet.type %></td>
        <td><%= pet.birthday %></td>
        <td><%= pet.breed %></td>
        <td><%= pet.description %></td>
        <td><%= pet.microchip_number %></td>
        <td><%= pet.adoption_date %></td>
        <td><%= pet.color %></td>
        <td><%= pet.owner_id %></td>
        <td><%= link_to 'Show', pet %></td>
        <td><%= link_to 'Edit', edit_pet_path(pet) %></td>
        <td><%= link_to 'Destroy', pet, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

